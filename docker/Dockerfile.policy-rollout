# syntax=docker/dockerfile:1
FROM golang:1.24 AS builder
WORKDIR /src
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/policy-rollout ./services/policy-rollout

FROM gcr.io/distroless/base-debian12:nonroot
ENV POLICY_ROLLOUT_PORT=8099
COPY --from=builder /out/policy-rollout /policy-rollout
USER nonroot:nonroot
EXPOSE 8099
ENTRYPOINT ["/policy-rollout"]

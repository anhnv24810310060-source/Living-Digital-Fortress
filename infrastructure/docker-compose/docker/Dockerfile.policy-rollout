# syntax=docker/dockerfile:1
FROM golang:1.25 AS builder
WORKDIR /src
COPY go.mod go.sum ./
RUN --mount=type=cache,target=/go/pkg/mod \
	go mod download
COPY . .
RUN --mount=type=cache,target=/go/pkg/mod \
	--mount=type=cache,target=/root/.cache/go-build \
	CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/policy-rollout ./services/shieldx-policy/policy-rollout

FROM gcr.io/distroless/base-debian12:nonroot
ENV POLICY_ROLLOUT_PORT=8099
COPY --from=builder /out/policy-rollout /policy-rollout
USER nonroot:nonroot
EXPOSE 8099
ENTRYPOINT ["/policy-rollout"]
